<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/UserPicBorder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/circleborder">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/home_userImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="9dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle_profile"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_profile"
                app:shapeAppearanceOverlay="@style/circular"></com.google.android.material.imageview.ShapeableImageView>


        </RelativeLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_Uname"
            android:text="Username"
            android:textColor="@color/gradStart"
            android:fontFamily="@font/raleway_bold"
            android:layout_marginTop="140dp"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            ></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/text_point"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_point"
            android:drawableLeft="@drawable/ic_baseline_water_drop_24"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center_vertical|right"
            android:paddingEnd="10dp"
            android:text="@string/point"
            android:textColor="#3E5475"
            android:textSize="18sp" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eclipse_blue"
            android:layout_marginTop="150dp"/>

        <ImageView
            android:id="@+id/ivtree"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/tree6"></ImageView>

        <TextView
            android:id="@+id/text_level"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@+id/ivtree"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:background="@drawable/level_bar"
            android:fontFamily="@font/raleway_bold"
            android:text="Level"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            />


        <ProgressBar
            android:id="@+id/exp_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:indeterminateTint="@color/black"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_below="@id/ivtree"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:progressDrawable="@drawable/exp_bar"
            android:progress="20"/>

        <TextView
            android:id="@+id/text_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/exp_bar"
            android:layout_alignTop="@+id/exp_bar"
            android:layout_alignRight="@+id/exp_bar"
            android:layout_alignBottom="@+id/exp_bar"
            android:text="10/100"
            android:paddingTop="3dp"
            android:textAlignment="center"
            android:textColor="@color/gradStart"
            android:fontFamily="@font/raleway_bold"
            android:textSize="16sp"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/drop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exp_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#3E5475"
            android:clickable="true"
            android:src="@drawable/water_drop1"
            app:tint="@color/white" />

    </RelativeLayout>










</RelativeLayout>